<%# <!DOCTYPE ejs>%>
<html>
  <head>
    <meta charset="utf-8">
    <title>Bartenda 21</title>
    <link rel='stylesheet' type='text/css' href='/../../css/footer.css'>
    <link rel='stylesheet' type='text/css' href='/../../css/edit.css'>
    <link href="https://fonts.googleapis.com/css?family=Aclonica" rel='stylesheet'>
    <link href="https://fonts.googleapis.com/css?family=BenchNine" rel="stylesheet">
  </head>
  <body>
    <header>
      <div class='heroVideo'>
        <video playsinline autoplay muted loop fade>
            <source src='../../video/whiskey.webm' type='video/webm'>
            <source src='../../video/whiskey.mp4' type='video/mp4'>
        </video>
      </div>
      <div class='mainTitle'>
        <h1 class='titleText' id='titleFont'>BARTENDA <sup>21</sup></h1>
        <h3 class='subtitleText' id='subtitleFont'>DISCOVER &amp; SHARE</h3>
      </div>
      <nav>
        <a class="home" href="/">Home</a>
        <hr>
        <a class='login' href='/login'>Log In</a>
        <hr>
        <a class='register' href='/register'>Register</a>
      </nav>
    </header>
    <main>
      <h3 class="postTitle">Now editing this post:</h3>
      <h1 class="postTitle"><%= post.drinkName %></h1>
      <div class="postHead">
        <div class="postContent">
          <img class="submitted" src="<%= post.url %>">
          <h4 class="submitted">Submitted by: <br> <%= post.submittedBy %></h4>
        </div>
      </div>
      <div class="details">
        <form action='/bartenda/<%= post.id %>?_method=PUT', method='POST'>
        <p class="subtitle">Change the photo URL?<sup>*</sup></p>
        <input class="field" type='text' name='url' value='<%= post.url %>'/>
        <p class="subtitle">Update drink name?<sup>*</sup></p>
        <input class="field" type='text' name='drinkName' value='<%= post.drinkName %>'/>
        <p class="subtitle">Update 'Submitted by'?<sup>*</sup></p>
        <input class="field" type='text' name='submittedBy' value='<%= post.submittedBy %>'/>
        <p class="subtitle">Update Known Ingredients?</p>
        <input class="field" type='text' name='ingredients' value='<%= post.ingredients %>'/>
        <p class="subtitle">Where did you have this drink?<sup>*</sup></p>
        <input class="field" type='text' name='locationName' value='<%= post.locationName %>'/>
        <p class="subtitle">How much did it cost?</p>
        <input class="field"type='number' name='price' value='<%= post.price %>'/>
        <p class="subtitle">Update the comments on this drink?</p>
        <input class="field" type='text' name='yourComments' value='<%= post.yourComments %>'/>
      </div>
      <a class="updatePost" href="/">Cancel changes</a>
      <p><button class='updatePost'>Submit</button></p>
      </form>
      <form action="/bartenda/<%= post.id %>?_method=DELETE" method="POST">
         <button class="updatePost">Delete post</button>
      </form>
    </main>
    <footer>
      <div class="footer">
        <a class='credit-global' href='/terms'>Designed and Created by Carrie Sampson &copy;2017</a>
      </div>
    </footer>
  </body>
</html>
