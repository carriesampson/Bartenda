<%# <!DOCTYPE html>%>
<html>
  <%# Created partial for head content%>
  <% include ../partials/head.ejs %>
  <body>
    <%# Created partial for header content%>
    <% include ../partials/header.ejs %>
    <main>
      <div class='col1'>
        <% if (currentUser) { %>
          <h3>Welcome <%= currentUser.username %>.</h3>
          <% } else { %>
            <h3>Welcome</h3>
          <% } %>
        <% if (currentUser) { %>
          <form action="/login?_method=DELETE" method='POST'>
            <input type='submit' value='Log out' />
          </form>
        <% } %>
        <% if (currentUser) { %>
          <h3><a href="/dash">Manage your posts</a><h3>
        <% } %>
      </div>
      <div class='col2'>
        <% for (let post of allPosts) { %>
          <a href='/bartenda/<%= post._id %>'><img src='<%= post.url %>'></a>
          <h3><%= post.drinkName %></h3>
          <h4><%= post.submittedBy %></h4>
        <% } %>
      </div>
    </main>
    <%# Created partial for footer content%>
    <% include ../partials/footer.ejs %>
  </body>
</html>
